<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fredfama.weparty">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--  -->
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.fredfama.weparty.CreatePartyActivity"
            android:label="@string/app_name" />

        <activity
            android:name="com.fredfama.weparty.JoinPartyActivity"
            android:label="@string/app_name" />

        <activity
            android:name="com.fredfama.weparty.MainActivity"
            android:label="@string/app_name" />

        <activity
            android:name="com.fredfama.weparty.PartyPhotosActivity"
            android:label="@string/app_name" />

        <activity
            android:name="com.fredfama.weparty.PartyPlaylistActivity"
            android:label="@string/app_name" />

        <activity
            android:name="com.fredfama.weparty.PartyPollActivity"
            android:label="@string/app_name" />

        <activity
            android:name="com.fredfama.weparty.PartySongsActivity"
            android:label="@string/app_name" />

        <activity
            android:name="com.fredfama.weparty.PhotoManagementActivity"
            android:label="@string/app_name" />

        <activity
            android:name="com.fredfama.weparty.SongManagementActivity"
            android:label="@string/app_name" />

        <activity
            android:name="com.fredfama.weparty.UserRegistrationActivity"
            android:label="@string/app_name" />


    </application>

</manifest>
