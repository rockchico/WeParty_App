<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fredfama.weparty">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--  -->
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreatePartyActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".JoinPartyActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".PartyPhotosActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".PartyPlaylistActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".PartyPollActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".PartySongsActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".PhotoManagementActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".SongManagementActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".UserRegistrationActivity"
            android:label="@string/app_name" />
        <activity android:name=".PlayerManagementActivity"></activity>
    </application>

</manifest>
